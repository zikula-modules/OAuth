<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikula_oauth_module.mapping_repository.class">Zikula\OAuthModule\Entity\Repository\MappingRepository</parameter>
        <parameter key="zikula_oauth_module.listener.user_delete_listener.class">Zikula\OAuthModule\Listener\UserDeleteListener</parameter>
    </parameters>

    <services>
        <service id="zikula_oauth_module.mapping_repository" class="%zikula_oauth_module.mapping_repository.class%">
            <factory service="doctrine.orm.default_entity_manager" method="getRepository"/>
            <argument type="string">Zikula\OAuthModule\Entity\MappingEntity</argument>
        </service>

        <service id="zikula_oauth_module.listener.user_delete_listener" class="%zikula_oauth_module.listener.user_delete_listener.class%">
            <argument type="service" id="zikula_oauth_module.mapping_repository" />
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="zikula_oauth_module.link_container" class="Zikula\OAuthModule\Container\LinkContainer" lazy="true">
            <argument type="service" id="translator.default" />
            <argument type="service" id="router" />
            <argument type="service" id="zikula_permissions_module.api.permission" />
            <argument type="service" id="zikula_users_module.internal.authentication_method_collector" />
            <tag name="zikula.link_container" />
        </service>
    </services>

</container>
