<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zikula_oauth_module.authentication_method.github.class">Zikula\OAuthModule\AuthenticationMethod\GithubAuthenticationMethod</parameter>
        <parameter key="zikula_oauth_module.authentication_method.alias.github.value" type="constant">Zikula\OAuthModule\OAuthConstant::ALIAS_GITHUB</parameter>
        <parameter key="zikula_oauth_module.authentication_method.google.class">Zikula\OAuthModule\AuthenticationMethod\GoogleAuthenticationMethod</parameter>
        <parameter key="zikula_oauth_module.authentication_method.alias.google.value" type="constant">Zikula\OAuthModule\OAuthConstant::ALIAS_GOOGLE</parameter>
    </parameters>

    <services>
        <service id="zikula_oauth_module.authentication_method.github" class="%zikula_oauth_module.authentication_method.github.class%">
            <argument type="service" id="session" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="router" />
            <argument type="service" id="zikula_oauth_module.mapping_repository" />
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <tag name="zikula.authentication_method" alias="%zikula_oauth_module.authentication_method.alias.github.value%" />
        </service>
        <service id="zikula_oauth_module.authentication_method.google" class="%zikula_oauth_module.authentication_method.google.class%">
            <argument type="service" id="session" />
            <argument type="service" id="request_stack" />
            <argument type="service" id="router" />
            <argument type="service" id="zikula_oauth_module.mapping_repository" />
            <argument type="service" id="zikula_extensions_module.api.variable" />
            <tag name="zikula.authentication_method" alias="%zikula_oauth_module.authentication_method.alias.google.value%" />
        </service>
    </services>
</container>

